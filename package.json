{
  "displayName": "Homebridge GPIO RGBW LED Strip",
  "name": "homebridge-gpio-rgbw-ledstrip",
  "description": "Raspberry Pi GPIO based LED Strip plugin for Homebridge",
  "main": "dist/index.js",
  "version": "1.3.1",
  "repository": {
    "type": "git",
    "url": "git://github.com/Sunoo/homebridge-gpio-rgbw-ledstrip.git"
  },
  "keywords": [
    "homebridge-plugin",
    "gpio rgb ledstrip",
    "led light",
    "rgb",
    "led",
    "gpio"
  ],
  "author": "David Maher",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sunoo/homebridge-gpio-rgbw-ledstrip/issues"
  },
  "homepage": "https://github.com/Sunoo/homebridge-gpio-rgbw-ledstrip#readme",
  "scripts": {
    "clean": "rimraf ./dist ./coverage",
    "build": "rimraf ./dist ./coverage && tsc",
    "format": "markdownlint --fix *.md",
    "lint": "eslint src/*.ts --fix",
    "lint-check": "eslint src/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint-check",
    "postpublish": "npm run clean",
    "watch": "npm run clean && tsc --watch"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "@types/node": "14.6.0",
    "eslint": "^7.5.0",
    "homebridge": "^1.1.1",
    "markdownlint-cli": "^0.23.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "files": [
    "config.schema.json",
    "dist/**/*",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=10",
    "homebridge": ">=1.0.0"
  },
  "dependencies": {
    "pi-blaster.js": ">=0.1.3"
  }
}
